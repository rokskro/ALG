<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.5.0/dist/js/bootstrap.bundle.min.js"></script>

<div class ="container mt-5">
    <!-- Progress Bar -->
    <div class="progress" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100">
        <div class="progress-bar bg-success" style="width: 0%"></div>
    </div>

    <!-- Step 1: Interest Selection -->
    <div class="mt-4">
         <h3>What suits your needs?</h3>
         <form id="userPreferencesStep1">
            <div class="form-group">
                <label for="interest">Choose just one. This will help us get you started</label>
                <select class="form-control" id="interest">
                    <option value="option1">Option 1</option>
                    <option value="option2">Option 2</option>
                    <option value="option3">Option 3</option>
                </select>
            </div>
            <button type="button" class="btn btn-primary" onclick="nextStep(1)">Next</button>
         </form>
    </div>
    <!-- Step 2: More Selection -->
    <div class="mt-4" style="display: none;" id="step2">
        <h3>What suits your needs?</h3>
        <form id="userPreferencesStep2">
            <div class="form-group">
                <label for="need">Choose just one. This will help us get you started</label>
                <select class="form-control" id="need">
                    <option value="option4">Option 4</option>
                    <option value="option5">Option 5</option>
                    <option value="option6">Option 6</option>
                </select>
            </div>
            <button type="button" class="btn btn-primary" onclick="nextStep(2)">Next</button>
        </form>
    </div>

    <!-- Matching Result -->
    <div class="mt-4" style="display: none;" id="matchingResult">
        <h3>Matching Result</h3>
        <div id="matchResult"></div>
    </div>
</div>

<script>
    let currentStep = 0;
    const totalSteps = 2; // Number of steps

    function nextStep(step){
        if (step === 1){
            const interest = document.getElementById('interest').value;
        } else if (step === 2){
            const need = document.getElementById('need').value;
        }//elseif

        // Update progress bar
        currentStep++;
        const progressBar = document.getElementById('progressBar');
        const progressLabel = document.querySelector('.progress-label');
        const percentComplete = (currentStep / totalSteps) * 100;
        progressBar.style.width = percentComplete + '%';
        progressBar.setAttribute('aria-valuenow', percentComplete);
        progressLabel.textContent = `${Math.round(percentComplete)}% Complete`;

        //revealing steps
        document.getElementById(`step${step}`).style.display = 'none';
        if (currentStep < totalSteps) {
            document.getElementById(`step${currentStep + 1}`).style.display = 'block';
        } else {
            // If all steps are completed, show matching result
            showMatchingResult();
        }//else
    }

    function showMatchingResult{
        const interest = document.getElementById('interest').value;
        const neede = document.getElementById('need').value;
        let result = "No match found.";

        if (interest === "option1" && need === "option4") {
            result = "You are matched with User A.";
        } else if (interest === "option2" && need === "option5") {
            result = "You are matched with User B.";
        } else if (interest === "option3" && need === "option6") {
            result = "You are matched with User C.";
        }
        document.getElementById('matchResult').textContent = result;
        document.getElementById('matchingResult').style.display = 'block';
    }
</script>